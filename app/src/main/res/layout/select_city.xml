<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >


    <RelativeLayout
        android:id="@+id/title_selectCity_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#000000"
        >

        <ImageView
            android:id="@+id/title_selectCity_back"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/selectcity_bar_back"/>


        <TextView
            android:id="@+id/title_selectCity_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="当前城市：北京"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/selectcity_search_buttonrela">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/selectcity_search"/>

            <EditText
                android:id="@+id/selectcity_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="搜索城市(中文)"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="35dp"
                />
        </RelativeLayout>
        <RelativeLayout

            android:id="@+id/selectcity_search_buttonrela"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true">
            <Button
                android:id="@+id/selectcity_search_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="搜索"/>

        </RelativeLayout>
    </RelativeLayout>








    <RelativeLayout
        android:layout_below="@+id/title_selectCity_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:id="@+id/selectcity_listview"
            android:layout_width="match_parent"
            android:divider="#000000"
            android:dividerHeight="1dp"
            android:layout_height="wrap_content">
        </ListView>

    </RelativeLayout>

</RelativeLayout>