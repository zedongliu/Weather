<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/title_selectCity_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#000000">

        <ImageView
            android:id="@+id/title_selectCity_back"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/selectcity_bar_back"/>



        <TextView
            android:id="@+id/title_selectCity_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="当前城市：北京"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:gravity="center"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/title_selectCity_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/selectcity_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></ListView>

    </RelativeLayout>

</RelativeLayout>